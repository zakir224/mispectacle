<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ivSpectacle"
        android:layout_width="100dp"
        android:layout_height="90dp"

        android:padding="5dp"
        android:src="@drawable/s5"
        android:layout_margin="5dp" />


        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Brand"
            android:layout_alignTop="@+id/ivSpectacle"
            android:layout_toRightOf="@+id/ivSpectacle"
            android:layout_toEndOf="@+id/ivSpectacle"
            android:id="@+id/textView"
            android:layout_marginTop="2.5dp"
            android:layout_marginBottom="2.5dp" />

        <TextView
            android:textSize="16sp"
            android:id="@+id/textViewBrand"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ray ban"
            android:layout_toRightOf="@+id/textViewC"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignTop="@+id/textView"
            android:layout_toLeftOf="@+id/buttonTryOn"
            android:layout_toStartOf="@+id/buttonTryOn" />

    <TextView
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Category: "
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:id="@+id/textViewC"
        android:layout_marginTop="2.5dp"
        android:layout_marginBottom="2.5dp" />

    <TextView
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Price:"
        android:id="@+id/textView3"
        android:layout_below="@+id/textViewC"
        android:layout_alignLeft="@+id/textViewC"
        android:layout_alignStart="@+id/textViewC"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="2.55dp" />

    <TextView
        android:textSize="16sp"
        android:id="@+id/textViewCategory"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rectangle"
        android:layout_toRightOf="@+id/textViewC"
        android:layout_alignBottom="@+id/textViewC"
        android:layout_alignTop="@+id/textViewC"
        android:layout_toLeftOf="@+id/buttonTryOn"
        android:layout_toStartOf="@+id/buttonTryOn" />

    <TextView
        android:textSize="16sp"
        android:id="@+id/textViewPrice"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rectangle "
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/textViewC"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toLeftOf="@+id/buttonTryOn"
        android:layout_toStartOf="@+id/buttonTryOn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Try On"
        android:id="@+id/buttonTryOn"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
