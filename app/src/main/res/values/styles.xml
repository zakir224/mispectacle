<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:actionBarTheme">@android:th</item>-->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="MyActionBar"  parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@android:color/holo_blue_light</item>
        <item name="background">@android:color/holo_blue_light</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:actionBarTheme">@android:th</item>-->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>


    <style name="AppTheme.Layout.InstallationLayout" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/installation_background</item>
        <!--<item name="android:gravity">center</item>-->
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AppTheme.Widget.TextView.HeadingOne" parent="AppTheme">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/installation_header_one_color</item>
        <!--<item name="fontPath">fonts/Montserrat-Bold.otf"</item>-->
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.Widget.TextView.HeadingTwo" parent="AppTheme.Widget.TextView.HeadingOne">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <!--<item name="fontPath">fonts/OpenSans-Regular.ttf</item>-->
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.Widget.TextView.Paragraph" parent="AppTheme.Widget.TextView.HeadingTwo">
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.Widget.InstallationButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/installation_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">318dp</item>
        <item name="android:layout_height">55dp</item>
        <!--<item name="fontPath">fonts/OpenSans-Regular.ttf</item>-->
        <item name="android:textSize">18dp</item>
    </style>

    <style name="AppTheme.Widget.InstallationButton.Narrow" parent="AppTheme.Widget.InstallationButton">
        <item name="android:layout_width">250dp</item>
    </style>

    <style name="AppTheme.Widget.InstallationEditText" parent="AppTheme">
        <item name="android:background">@drawable/installation_edittext</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:layout_width">325dp</item>
        <item name="android:layout_height">55dp</item>
        <!--<item name="fontPath">fonts/OpenSans-Regular.ttf</item>-->
        <item name="android:textSize">23sp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="AppTheme.Widget.InstallationEditText.Password" parent="AppTheme.Widget.InstallationEditText">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="AppTheme.Widget.TextView.Paragraph.Error" parent="AppTheme.Widget.TextView.Paragraph">
        <item name="android:textColor">@color/red</item>
    </style>


    <style name="AppTheme.Widget.TextView.TipHeader" parent="AppTheme.Widget.TextView.HeadingOne">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">45sp</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="fontPath">fonts/BebasNeue.otf</item>-->
        <item name="android:textColor">@color/installation_button_background</item>
    </style>

    <style name="AppTheme.Widget.TextView.TipAmount" parent="AppTheme.Widget.TextView.TipHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#d30c0f04</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">normal</item>
        <!--<item name="fontPath">fonts/proximanova-thin-webfont.ttf</item>-->
    </style>

    <style name="AppTheme.Widget.TextView.SelectedTipAmount" parent="AppTheme.Widget.TextView.TipHeader">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">110sp</item>
        <item name="android:textColor">#d30c0f04</item>
        <item name="android:textStyle">normal</item>
        <!--<item name="fontPath">fonts/proximanova-thin-webfont.ttf</item>-->
    </style>

    <style name="AppTheme.Widget.EditText.Tip" parent="AppTheme.Widget.TextView.TipHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/spectacle_list_item_background</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center</item>
        <item name="android:hint">$00</item>
        <item name="android:inputType">number</item>
        <item name="android:textStyle">normal</item>
        <!--<item name="fontPath">fonts/proximanova-thin-webfont.ttf</item>-->
        <item name="android:maxLength">3</item>
        <item name="android:textColor">#d30c0f04</item>

    </style>

    <style name="AppTheme.Widget.TextView.Paragraph.Tip" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">normal</item>
        <!--<item name="fontPath">fonts/ProximaNova-Reg.otf</item>-->
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFullscreen">false</item>
    </style>

</resources>
